<%- include('./partials/header') %>

<div class="w-full h-screen flex justify-center items-center p-60 gap-44">
  <div class="w-1/2 flex items-center justify-center">
    <div class="flex flex-col gap-3 w-full">
      <h1 class="text-3xl font-medium">
        Welcome to <span class="text-rose-500 font-extrabold">Bagsy</span>
      </h1>
      <h3>Create new account</h3>
      <form class="flex flex-col gap-3" autocomplete="off" action="submit">
        <input
          class="border-2 rounded-md py-2 px-4 focus:border-rose-500 outline-none"
          type="text"
          name="name"
          id="name"
          placeholder="Full Name"
        />
        <input
          class="border-2 rounded-md py-2 px-4 focus:border-rose-500 outline-none"
          type="email"
          name="email"
          id="email"
          placeholder="Email"
        />
        <input
          class="border-2 rounded-md py-2 px-4 focus:border-rose-500 outline-none"
          type="password"
          name="password"
          id="password"
          placeholder="Password"
        />
        <input
          class="mt-4 rounded-3xl max-w-fit py-2 px-4 bg-rose-500 text-white"
          type="submit"
          value="Create new account"
        />
      </form>
    </div>
  </div>
  <div class="w-0.5 bg-slate-500 h-1/2"></div>
  <div class="w-1/2 flex items-center justify-center">
    <div class="flex flex-col gap-3 w-full">
      <h3>Login to your account</h3>
      <form class="flex flex-col gap-3" autocomplete="off" action="submit">
        <input
          class="border-2 rounded-md py-2 px-4 focus:border-rose-500 outline-none"
          type="email"
          name="email"
          id="email"
          placeholder="Email"
        />
        <input
          class="border-2 rounded-md py-2 px-4 focus:border-rose-500 outline-none"
          type="password"
          name="password"
          id="password"
          placeholder="Password"
        />
        <input
          class="mt-4 rounded-3xl max-w-fit py-2 px-4 bg-rose-500 text-white"
          type="submit"
          value="Login"
        />
      </form>
    </div>
  </div>
</div>
