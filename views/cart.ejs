<%- include('./partials/header') %>
<div class="w-full flex h-screen">
  <div class="w-[70%] h-screen overflow-scroll" style="scrollbar-width: none;">
    <% 
      let totalBill = 0; // Initialize total bill variable
      cartItems.forEach(function(item){ 
        // Calculate item total after discount and fees
        const discountAmount = (item.discount * item.price) / 100;
        const itemTotal = item.price - discountAmount + 20; // MRP - Discount + Platform Fee
        totalBill += itemTotal; // Add item total to total bill
    %>
    <div class="w-full h-fit flex items-start px-20 pt-20 pb-0 gap-10">
      <div class="w-[50%] h-[400px] rounded-md overflow-hidden">
        <div
          class="w-full flex justify-center items-center h-2/3 bg-[<%= item.bgcolor%>]"
        >
          <img
            class="h-2/3 object-contain w-2/3"
            src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
            alt=""
          />
        </div>
        <div
          class="w-full bg-[<%= item.panelcolor%>] flex justify-between px-5 py-4"
        >
          <h3 class="text-2xl"><%= item.name%></h3>
          <div class="flex items-center gap-2">
            <i
              class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
            ></i>
            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
            <i
              class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
            ></i>
          </div>
        </div>
        <div
          class="flex items-center bg-white border-2 justify-between px-5 py-3"
        >
          <h4 class="text-lg">Net Total</h4>
          <h2 class="text-lg">₹ <%= item.price - discountAmount %></h2>
        </div>
      </div>
      <div class="w-[50%]">
        <h3 class="text-xl">Price Breakdown</h3>
        <div class="px-10 mt-5">
          <div class="flex justify-between mt-2">
            <h4 class="w-1/3">MRP</h4>
            <h4>₹ <%=item.price%></h4>
          </div>
          <div class="flex justify-between mt-2">
            <h4 class="w-1/3">Discount on MRP</h4>
            <h4><%=item.discount%> %</h4>
          </div>
          <div class="flex justify-between mt-2">
            <h4 class="w-1/3">Platform Fee</h4>
            <h4>₹ 20</h4>
          </div>
          <div class="flex justify-between mt-2">
            <h4 class="w-1/3">Shipping Fee</h4>
            <h4>FREE</h4>
          </div>
        </div>
        <div class="w-full h-[1px] bg-black mt-10"></div>
        <div class="flex mt-5">
          <h3 class="w-1/3 text-xl">Total Amount</h3>
          <h3 class="font-semibold text-xl text-green-600">
            ₹ <%= itemTotal %>
          </h3>
        </div>
        <form action=""></form>
      </div>
    </div>
    <% }) %>
  </div>
  <div class="w-[30%] pr-20 pt-20">
    <div class="flex gap-20">
      <div class="border-[0.25px] border-black h-[400px]"></div>
      <div>
        <h1 class="text-3xl text-rose-700 font-bold mb-5">Total bill: </h1>
        <h4 class="text-lg font-semibold">₹ <%= totalBill %></h4> <!-- Display total bill amount -->
      </div>

    </div>
  </div>
</div>

<%- include('./partials/footer') %>
